{
	"compilerOptions": {
		"strict": true,
		"target": "es2015",
		"module": "es2015",
		"lib": ["es2015", "DOM"],
		"moduleResolution": "node",
		"removeComments": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"allowJs": false,
		"noUnusedLocals": true,
		"outDir": "dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"]
		},
		"plugins": [
			{ "transform": "typescript-transform-paths" },
			{ "transform": "typescript-transform-paths", "afterDeclarations": true }
		]
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
